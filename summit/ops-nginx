{% set ops = pillar.get('ops_dash', {}) -%}
server {
    listen 80;
    client_max_body_size 4G;
    server_name ops.sk.com;
    root {{ops.get('path', '')}}/client;

    location / { # TODO: clean up how static files are served
        try_files $uri @django;
    }

    location @django {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        proxy_connect_timeout 1h;
        proxy_read_timeout 1h;
        proxy_send_timeout 1h;
        proxy_pass http://gunicorn2;
    }

    location /static/admin/ {
        alias {{ops.get('venv_path', '')}}/lib/python2.7/site-packages/django/contrib/admin/static/admin/;
    }
}

# vim: set filetype=nginx:
