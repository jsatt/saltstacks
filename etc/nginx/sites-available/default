upstream gunicorn {
    server 127.0.0.1:8000;
}

server {
    listen 80 default;
    client_max_body_size 4G;
    server_name _;

    location /static/ {
        expires 1M;
        alias {{pillar.django.static_path}};
    }

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        proxy_pass http://gunicorn;
    }
}

server {
    listen 80;
    server_name www.jsatt.com;
    rewrite ^ http://jsatt.com$request_uri permanent;
}


server {
    listen 80;
    server_name static.jsatt.com;
    root {{pillar.django.static_path}};
    expires 1M;
    location /media/ {
        alias {{pillar.django.media_path}};
    }
    location ~ ^.*\.(woff|svg|eot|ttf)$ {
        add_header 'Access-Control-Allow-Origin' '*';
    }
}

# vim: set filetype=nginx:
